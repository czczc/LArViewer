task :default => "build"

desc "Build Application"
task :build do |t|
  Dir.chdir("scripts") do
    sh "root -b -q -l loadClasses.C"
  end
end

desc "3D Viewer"
task "3d" do |t|
  Dir.chdir("scripts") do
    sh "root -l run3d.C"
  end
end

desc "Show Full 3D Geometry (OpenGL)"
task "geo" do |t|
  Dir.chdir("geometry") do
    sh "root -l gl.C"
  end
end